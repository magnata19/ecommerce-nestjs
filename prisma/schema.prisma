generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Roles {
  ADMIN
  USER
}

model User {
  id       Int      @id @default(autoincrement())
  username String   @unique
  password String
  profile  Profile?
  role     Roles    @default(USER)

  @@map("users")
}

model Profile {
  id      Int       @id @default(autoincrement())
  name    String
  email   String
  userId  Int       @unique
  user    User?     @relation(fields: [userId], references: [id])
  address Address[]

  @@map("profiles")
}

model Address {
  id        Int     @id @default(autoincrement())
  country   String
  state     String
  city      String
  profileId Int
  profile   Profile @relation(fields: [profileId], references: [id])

  @@map("addresses")
}
